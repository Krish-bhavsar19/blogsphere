<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - BlogSphere</title>
    <%- include('partials/head') %>
        <link rel="stylesheet" href="/style/theme.css">
        <link rel="stylesheet" href="/style/dashboard.css">
</head>

<body>
    <%- include('partials/nav') %>


    <div class="dashboard-container">
        <div class="container">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="sidebar">
                        <div class="profile-section">
                            <img src="<%= user && user.profileImageURL ? user.profileImageURL : '/images/man-avatar.jpg' %>"
                                alt="Profile" class="profile-avatar"
                                onerror="this.onerror=null;this.src='/images/man-avatar.jpg';">

                            <h5>
                                <%= user.username %>
                            </h5>
                        </div>

                        <nav class="nav flex-column">
                            <a class="nav-link active" href="#overview">
                                <i class="fas fa-tachometer-alt me-2"></i> Overview
                            </a>
                            <a class="nav-link" href="#posts">
                                <i class="fas fa-file-alt me-2"></i> My Posts
                            </a>
                            <a class="nav-link" href="#new-post">
                                <i class="fas fa-plus me-2"></i> Create Post
                            </a>
                            <a class="nav-link" href="/user/profile">
                                <i class="fas fa-user-cog me-2"></i> Profile Settings
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <div class="main-content" id="overview">
                        <h3><i class="fas fa-chart-line me-2"></i>Dashboard Overview</h3>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="stats-card">
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <div>
                                            <h4 class="mb-0">
                                                <%= totalPosts %>
                                            </h4>
                                            <small>Total Posts</small>
                                        </div>
                                        <i class="fas fa-file-alt icon"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="stats-card">
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <div>
                                            <h4 class="mb-0">
                                                <%= totalComments %>
                                            </h4>
                                            <small>Total Comments</small>
                                        </div>
                                        <i class="fas fa-comments icon"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="stats-card">
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <div>
                                            <h4 class="mb-0">
                                                <%= totalLikes %>
                                            </h4>
                                            <small>Total Likes</small>
                                        </div>
                                        <i class="fas fa-heart icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Create Post Section -->
                    <div class="main-content" id="new-post">
                        <h3><i class="fas fa-plus me-2"></i>Create New Post</h3>
                        <% if (typeof error !=='undefined' && error) { %>
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <%= error %>
                            </div>
                            <% } %>
                                <form action="/posts/create" method="POST" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="title" class="form-label">Post Title</label>
                                                <input type="text" class="form-control" id="title" name="title"
                                                    required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label for="category" class="form-label">Category</label>
                                                <select class="form-control" id="category" name="category">
                                                    <option value="Technology">Technology</option>
                                                    <option value="Lifestyle">Lifestyle</option>
                                                    <option value="Travel">Travel</option>
                                                    <option value="Food">Food</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="mb-3">
                                                <label for="aiStyle" class="form-label"><i class="fas fa-magic me-1 text-primary"></i>AI Style</label>
                                                <select class="form-control" id="aiStyle">
                                                    <option value="default">Default</option>
                                                    <option value="poetic">Poetic</option>
                                                    <option value="minimal">Minimal</option>
                                                    <option value="luxury">Luxury</option>
                                                    <option value="emotional">Emotional</option>
                                                    <option value="funny">Funny</option>
                                                    <option value="professional">Professional</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="content" class="form-label">Content</label>
                                        <textarea class="form-control" id="content" name="content" rows="8"
                                            placeholder="Write your amazing story here..."></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="image" class="form-label">Featured Image</label>
                                                <input type="file" class="form-control" id="image" name="image"
                                                    accept="image/*">
                                                <button type="button" id="aiGenerateBtn" class="btn btn-outline-primary mt-2 w-100">
                                                    <i class="fas fa-magic me-2"></i>Generate AI Content
                                                </button>
                                                <div id="aiResult" style="display:none;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="tags" class="form-label">Tags (comma separated)</label>
                                                <input type="text" class="form-control" id="tags" name="tags"
                                                    placeholder="technology, web, development">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-paper-plane me-2"></i>Publish Post
                                        </button>
                                    </div>
                                </form>
                    </div>

                    <!-- My Posts Section -->
                    <div class="main-content" id="posts">
                        <h3><i class="fas fa-file-alt me-2"></i>My Posts</h3>

                        <div class="row">
                            <% if (typeof posts !=='undefined' && posts.length> 0) { %>
                                <% posts.forEach(post=> { %>
                                    <div class="col-md-6 mb-4">
                                        <div class="card post-card">
                                            <img src="<%= post.image || 'https://res.cloudinary.com/<cloud_name>/image/upload/v123456/default-post.jpg' %>"  class="card-img-top" alt="<%= post.title %>"
                                                style="height: 200px; object-fit: cover;">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <span class="badge">
                                                        <%= post.category %>
                                                    </span>
                                                    <small class="text-muted">
                                                        <%= new Date(post.createdAt).toLocaleDateString() %>
                                                    </small>
                                                </div>
                                                <h5 class="card-title">
                                                    <%= post.title %>
                                                </h5>
                                                <p class="card-text text-muted">
                                                    <%= post.content.substring(0, 100) %>...
                                                </p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="d-flex gap-2 align-items-center">
                                                        <button class="btn btn-link like-btn"
                                                            data-post-id="<%= post._id %>" aria-label="Like post">
                                                            <i class="fas fa-heart <%= (post.likes && user && post.likes.some(like => like.toString() === user._id.toString())) ? 'text-danger' : 'text-muted' %>"
                                                                style="font-size: 1.3rem;"></i>
                                                            <span class="like-count">
                                                                <%= post.likes ? post.likes.length : 0 %>
                                                            </span>
                                                        </button>
                                                    </div>
                                                    <div class="d-flex gap-2">
                                                        <a href="/posts/<%= post._id %>"
                                                            class="btn btn-sm btn-primary d-flex align-items-center">
                                                            <i class="fas fa-book-open me-1"></i> Read More
                                                        </a>
                                                        <a href="/posts/<%= post._id %>/edit"
                                                            class="btn btn-sm btn-outline-primary d-flex align-items-center">
                                                            <i class="fas fa-edit me-1"></i> Edit
                                                        </a>
                                                        <form action="/posts/<%= post._id %>/delete" method="POST"
                                                            style="display:inline;">
                                                            <button type="submit"
                                                                class="btn btn-sm btn-outline-danger d-flex align-items-center"
                                                                style="height: 43px;"
                                                                onclick="return confirm('Are you sure you want to delete this post?');">
                                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="col-12">
                                                <div class="empty-state">
                                                    <i class="fas fa-file-alt fa-3x"></i>
                                                    <h5>No posts yet</h5>
                                                    <p>Start writing your first blog post!</p>
                                                    <a href="#new-post" class="btn btn-primary">Create Your First
                                                        Post</a>
                                                </div>
                                            </div>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const postId = this.getAttribute('data-post-id');
                fetch(`/posts/${postId}/like`, {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    }
                })
                    .then(res => res.json())
                    .then(data => {
                        if (typeof data.likes !== 'undefined') {
                            const icon = this.querySelector('i');
                            const countSpan = this.querySelector('.like-count');
                            const liked = icon.classList.contains('text-muted');
                            if (liked) {
                                icon.classList.add('text-danger');
                                icon.classList.remove('text-muted');
                            } else {
                                icon.classList.remove('text-danger');
                                icon.classList.add('text-muted');
                            }
                            countSpan.textContent = data.likes.length;
                        }
                    });
            });
        });

        // AI Content Generator Script
        const aiBtn = document.getElementById('aiGenerateBtn');
        if (aiBtn) {
            aiBtn.addEventListener('click', async (e) => {
                e.preventDefault();
                
                const imageInput = document.getElementById('image');
                if (!imageInput.files[0]) {
                    alert('Please select an image first to generate AI content!');
                    return;
                }

                const originalHtml = aiBtn.innerHTML;
                aiBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Analyzing Image...';
                aiBtn.disabled = true;

                try {
                    const formData = new FormData();
                    formData.append('image', imageInput.files[0]);
                    
                    // Use current content as context if user typed something
                    const contentVal = document.getElementById('content').value;
                    formData.append('text', contentVal);
                    
                    formData.append('style', document.getElementById('aiStyle').value);

                    const res = await fetch('/posts/analyze', {
                        method: 'POST',
                        body: formData
                    });

                    const data = await res.json();

                    if (data.error) throw new Error(data.error);

                    // Populate fields
                    if (data.title) document.getElementById('title').value = data.title;
                    if (data.caption) document.getElementById('content').value = data.caption;
                    if (data.hashtags) document.getElementById('tags').value = data.hashtags.join(', ');

                    // Show detected info
                    const resultDiv = document.getElementById('aiResult');
                    if (data.detected) {
                         resultDiv.innerHTML = `
                            <div class="alert alert-info mt-2 small">
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Detected:</strong> ${data.detected.scene || 'N/A'}, ${data.detected.mood || 'N/A'} <br>
                                <strong>Objects:</strong> ${data.detected.objects ? data.detected.objects.join(', ') : 'N/A'}
                            </div>
                        `;
                        resultDiv.style.display = 'block';
                    }

                } catch (err) {
                    console.error(err);
                    alert('AI Generation Failed: ' + err.message);
                } finally {
                    aiBtn.innerHTML = originalHtml;
                    aiBtn.disabled = false;
                }
            });
        }
    </script>
</body>

</html>